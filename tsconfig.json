{
  "compilerOptions": {
    // File Layout
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings - CommonJS
    "module": "commonjs",
    "target": "ES2020",
    "types": ["node"],

    // Interop
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Typechecking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Remove problematic options
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}