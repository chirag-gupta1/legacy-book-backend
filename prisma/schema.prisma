datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String         @id @default(uuid())
  name          String
  email         String         @unique
  conversations Conversation[]
  createdAt     DateTime       @default(now())
}

model Conversation {
  id             String    @id @default(uuid())
  user           User      @relation(fields: [userId], references: [id])
  userId         String
  title          String?
  currentSection String
  questionIndex  Int       @default(0)
  status         String    @default("active")
  answers        Answer[]
  createdAt      DateTime  @default(now())
}

model Answer {
  id              String   @id @default(uuid())
  conversationId  String
  question        String
  response        String
  importanceScore Int?
  tags            Json
  followUp        String?     // <-- ADDED HERE
  createdAt       DateTime @default(now())

  conversation    Conversation @relation(fields: [conversationId], references: [id])
}

model VerificationDecision {
  id             String   @id @default(uuid())
  conversationId String
  issueId        String   // stable ID from verifier
  decision       String   // KEEP | REMOVE | ANONYMIZE
  createdAt      DateTime @default(now())
}

model BookVersion {
  id             String   @id @default(uuid())
  conversationId String
  versionNumber  Int
  content        String
  status         String   // DRAFT | VERIFIED | FINAL
  createdAt      DateTime @default(now())
}
